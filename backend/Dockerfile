FROM node:18-alpine

WORKDIR /app

# Copiar package.json e package-lock.json
COPY package*.json ./

# Instalar dependências
RUN npm ci --only=production

# Copiar código fonte
COPY . .

# Criar diretórios necessários
RUN mkdir -p uploads logs

# Expor porta
EXPOSE 5000

# Comando para iniciar aplicação
CMD ["npm", "start"]
